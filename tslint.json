{
    "enable": true,
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [true, "tabs", 4],
        "object-literal-sort-keys": false,
        "object-literal-shorthand": false,
        "array-type": ["array"],
        "max-line-length": [false],
        "interface-name": [false],
        "variable-name": [false], // lots of RFC names that don't match the rules
        "member-ordering": [false],
        "curly": [true, "ignore-same-line"],
        "triple-equals": [true, "allow-undefined-check", "allow-null-check"],
        "arrow-parens": false,
        "no-bitwise": false,
        "max-classes-per-file": [false],
        "no-namespace": [false],
        "quotemark": [true, "double", "avoid-escape"], // change "double" to "single" if you prefer ' over "
        // development:
        "no-console": [false]
        // production:
        // "no-console": [true, "log", "error"]
    }
}
